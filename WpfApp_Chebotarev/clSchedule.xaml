<Window x:Class="WpfApp_Chebotarev.clSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Chebotarev"
        mc:Ignorable="d"
        Title="График уборки" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Violet" Offset="0.0"/>
            <GradientStop Color="DarkViolet" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <StackPanel Margin="20">
        <TextBlock Text="Мой график уборок" 
                   FontStyle="Italic" FontWeight="Bold" FontSize="30" 
                   HorizontalAlignment="Center" />
        <DataGrid x:Name="RoomsDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  Margin="10" 
                  SelectionMode="Single"
                  ItemsSource="{Binding Rooms}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Этаж" Binding="{Binding floor}" Width="*"/>
                <DataGridTextColumn Header="Номер" Binding="{Binding number}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding category}" Width="*"/>
                <DataGridCheckBoxColumn Header="Статус уборки" Binding="{Binding status, Mode=TwoWay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SaveButton" 
                    Content="Сохранить изменения" 
                    Width="180" Height="38" 
                    Background="Gray"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"
                    IsDefault="True"
                    BorderThickness="0"
                    Margin="10"
                    Click="SaveButton_Click"/>
            <Button x:Name="ExitButton"
                    Content="Выйти"
                    Width="180" Height="38"
                    Background="Gray"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"
                    IsDefault="True"
                    BorderThickness="0"
                    Margin="10" Click="Button_Click_Exit"/>
        </StackPanel>
    </StackPanel>
</Window>
