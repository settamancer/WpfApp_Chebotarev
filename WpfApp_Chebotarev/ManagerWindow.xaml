<Window x:Class="WpfApp_Chebotarev.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Chebotarev"
        mc:Ignorable="d"
        Title="Система управления отелем" Height="600" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="DarkViolet" Offset="0.0"/>
            <GradientStop Color="Violet" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <StackPanel>
    <Grid Margin="10">
            <TabControl Background="Transparent">
                <TabItem Header="Гости">
                    <DataGrid x:Name="GuestsDataGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding Guests}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="*"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding fullName}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding documentNumber}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Бронирование">
                    <DataGrid x:Name="ReservationsDataGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding Reservations}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="*"/>
                            <DataGridTextColumn Header="ID Гостя" Binding="{Binding guest_id}" Width="*"/>
                            <DataGridTextColumn Header="ID Комнаты" Binding="{Binding room_id}" Width="*"/>
                            <DataGridTextColumn Header="Дата въезда" Binding="{Binding checkIn}" Width="*"/>
                            <DataGridTextColumn Header="Дата выселения" Binding="{Binding checkOut}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Номерной фонд">
                    <Frame Name="RoomsFrame" NavigationUIVisibility="Hidden"/>
                </TabItem>
                <TabItem Header="Управление клинингом">
                    <Frame Name="CleaningManagementFrame" NavigationUIVisibility="Hidden"/>
                </TabItem>
            </TabControl>
        </Grid>
        <Button x:Name ="ExitButton" Content="Выйти"
                Width="180"
                Height="38"
                Background="Gray"
                Foreground="White"
                FontWeight="Bold"
                Cursor="Hand"
                IsDefault="True"
                BorderThickness="0" Click="Button_Click_Exit"/>
    </StackPanel>
</Window>
